@model List<Shops.Models.Transaction>

@{
    ViewData["Title"] = "Your Transactions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 250px;
            background-color: #000000; /* Set background color to black */
            color: #ffffff; /* Text color white */
            padding: 20px;
            overflow-y: auto;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .category-link {
            cursor: pointer;
            color: #ffffff; /* Text color white */
            background-color: #000000; /* Set background color to black */
            padding: 10px; /* Add padding to make it visually appealing */
            margin-bottom: 5px; /* Add margin to separate each item */
            transition: background-color 0.3s; /* Smooth transition */
        }

            .category-link:hover {
                background-color: #333; /* Hover background color dark grey */
                color: #ffffff; /* Text color white */
            }

                .category-link:hover i {
                    color: #ffffff; /* Icon color white */
                }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar">
                <h3>Retail Store</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item list-group-item-action category-link" id="category1">
                        <i class="bi bi-plus-square"></i> Product
                    </li>
                    <li class="list-group-item list-group-item-action category-link" id="category2">
                        <i class="bi bi-cash-coin"></i> Cart
                    </li>
                    <li class="list-group-item list-group-item-action category-link" id="category3">
                        <i class="bi bi-tags"></i> Transaction
                    </li>
                </ul>
            </div>

            <!-- Content -->
            <div class="col-md-9 content">
                @if (Model != null && Model.Any())
                {
                    <h1>Your Transactions</h1>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Transaction Date</th>
                                <th>Total Amount</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td>@transaction.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>@transaction.TotalAmount.ToString("C")</td>
                                    <td>
                                        <ul class="list-group">
                                            @foreach (var detail in transaction.TransactionDetails)
                                            {
                                                <li class="list-group-item">@detail.Product.Name - Quantity: @detail.Quantity</li>
                                            }
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <!-- Updated content for no transactions found -->
                    <div class="alert alert-warning" role="alert">
                        No transactions found.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Redirect links based on category
        document.getElementById('category1').addEventListener('click', function () {
            window.location.href = '@Url.Action("Index", "User")';
        });

        document.getElementById('category2').addEventListener('click', function () {
            window.location.href = '@Url.Action("Order", "Cart")';
        });

        document.getElementById('category3').addEventListener('click', function () {
            window.location.href = '@Url.Action("Transactions", "User")';
        });
    </script>

</body>
</html>
